    --line-height-loose: 1.6; } }

:root {
  --space: calc(1rem/3); }

@media (min-width: 48em) {
  :root {
    --space: calc(1rem/2); } }

*,
*::before,
*::after {
  box-sizing: border-box; }

html {
  height: 100%; }

/* Remove default margin */
body,
h1,
h2,
h3,
h4,
p,
ul[class],
ol[class],
li,
figure,
figcaption,
blockquote,
dl,
dd {
  margin: 0; }

body {
  min-height: 100vh;
  scroll-behavior: smooth;
  text-rendering: optimizeSpeed;
  line-height: 1.5; }

/* Remove default padding and list style */
ul[class],
ol[class] {
  padding: 0;
  list-style: none; }

img {
  max-width: 100%;
  display: block; }

input,
button,
textarea,
select {
  font: inherit; }

body {
  color: var(--color-body);
  font-family: var(--font-sans);
  font-size: var(--font-size-xs); }
  body h1,
  body h2 {
    color: var(--color-dark); }

main {
  padding: calc(var(--space)*3); }
  @media (min-width: 48em) {
    main {
      padding: calc(var(--space)*6);
      height: 100vh;
      overflow-y: scroll; } }

a[class] {
  color: var(--color-dark);
  text-decoration: none;
  display: inline-block; }
  a[class]:hover {
    text-decoration: underline; }
  a[class]:active, a[class]:focus {
    outline: dotted 1px var(--color-dark);
    outline-offset: 2px; }

a:not([class]) {
  color: var(--color-link);
  cursor: pointer;
  text-decoration: underline;
  text-decoration-skip-ink: auto; }
  a:not([class]):hover {
    background: var(--color-link);
    color: var(--color-white);
    text-decoration: none; }
  a:not([class]):active, a:not([class]):focus {
    outline: dotted 1px var(--color-link); }

form {
  font-size: var(--font-size-s);
  padding: calc(var(--space)*2) 0;
  max-width: 860px; }
  form fieldset {
    border: 2px solid var(--color-lighter);
    font-weight: var(--font-bold);
    padding: calc(var(--space)*3);
    margin: calc(var(--space)*3) 0; }
  form label {
    font-weight: var(--font-medium); }
  form input[type="text"] {
    background: var(--color-white);
    border: solid 2px var(--color-lighter);
    border-radius: 0;
    font-size: inherit;
    outline: solid 3px transparent;
    outline-offset: 0;
    padding: var(--space);
    position: relative;
    transition: all .2s;
    margin: var(--space) 0 calc(var(--space)*2) 0;
    width: 100%;
    -webkit-appearance: none; }
  form input:focus[type="text"],
  form input:active[type="text"] {
    border: solid 2px var(--color-brand);
    outline: solid 3px #d9ddff;
    outline-offset: 0;
    transition: all .2s; }
  form select {
    font-size: var(--font-size-s);
    margin: var(--space); }

.Wrapper {
  display: grid; }
  @media (min-width: 75em) {
